<% if !current_user.nil? %>
  <% if current_user.super_admin? %>
    <%= link_to 'Create Super admin', new_member_path %><br/>
    <h4>List & Details of super admins</h4>
    <table class = "table table-striped table-bordered" style = "width: 50%">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
        </tr>
      </thead>

      <% user = super_admin_true %>

      <% user.each do |user| %>
        <tr>
          <td> <%=user.email%> </td>
          <td> <%=user.name%> </td>
        </tr>
      <%end%>
    </table>
    <%end%>

        <br>

    <% if current_user.admin? or current_user.super_admin? %>
      <%= link_to 'Create new admin', new_member_path %><br/>
      <h4>List & Details of Admins</h4>
        <table class = "table table-striped table-bordered ", style = "width: 50%" >
        <thead>
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% @user1.each do |user| %>
          <tbody>
          <tr>
            <td> <%= user.email %> </td>
            <td> <%= user.name %> </td>
            <td class = "link_color">
              <%= link_to 'Destroy', member_destroy_path(user.id), data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
          </tbody>
        <%end%>
        </table>
    <%end%>
<%end%>
